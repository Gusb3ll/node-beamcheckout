{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext",
      "DOM",
      "ScriptHost"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}